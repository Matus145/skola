
import tkinter as tk
print(tk.TkVersion)

root = tk.Tk()
root.title("Main frame")
root.geometry("800x800")

entry = tk.Entry(root)
entry.grid(pady=0)

def rekcia_tlacidla():
    text = entry.get()
    label.config(text=f"Príklad: {text}, výsledok: {eval(text)}")
    print("Button pressed")
    print(f"Zadaný text: {text}")
    print(f"Výsledok: {eval(text)}")

btn1 = tk.Button(root, text="Potvrď vloženie", command=rekcia_tlacidla)
btn1.grid(row=1 , column= 1)
btn2 = tk.Button(root, text="Potvrď vloženie", command=rekcia_tlacidla)
btn2.grid(row= 2 , column= 1 )
btn3 = tk.Button(root, text="Potvrď vloženie", command=rekcia_tlacidla)
btn3.grid(row=3 , column= 1)
btn4 = tk.Button(root, text="Potvrď vloženie", command=rekcia_tlacidla)
btn4.grid(row= 4 , column= 1)
btn5 = tk.Button(root, text="Potvrď vloženie", command=rekcia_tlacidla)
btn5.grid(row= 5 , column= 1)
btn6 = tk.Button(root, text="Potvrď vloženie", command=rekcia_tlacidla)
btn6.grid(row= 0 , column= 1)

label = tk.Label(root)
label.grid(pady=10)

root.mainloop()
